void pyramid(){
    

#include <stdio.h>

int main()
{
    for (int i = 0; i < 11; i += 2) {

        for (int j = 11 - i; j > 1; j--) {
            // printing spaces
            printf(" ");
        }


        for (int j = 0; j <= i; j++) {
            // printing stars
            printf("* ");
        }


        printf("\n");
    }


    for (int i = 11; i > 0; i -= 2) {


        for (int j = 11 - i; j > 1; j--) {
            // printing spaces
           printf(" ");
        }


        for (int j = 0; j <= i; j++) {
            // printing stars
            printf("* ");
        }

       printf("\n");
}
return 0;

}
